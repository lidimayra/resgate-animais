- model_class = Animal

.container
  .row
    .col-md-11

      .page-header
        %h1=t model_class.model_name.human.pluralize

      %table.table.table-striped
        %thead
          %tr
            %th= model_class.human_attribute_name(:nome)
            %th= model_class.human_attribute_name(:peso)
            %th= model_class.human_attribute_name(:especie)
            %th= model_class.human_attribute_name(:data_registro)
            %th= model_class.human_attribute_name(:data_saida)
            %th= t("helpers.actions")
        %tbody
          - animals.each do |animal|
            %tr
              %td= link_to animal.nome, animal_path(animal)
              %td= animal.peso
              %td= animal.especie
              %td= animal.data_registro
              %td= animal.data_saida
              %td
                = link_to t("helpers.links.edit"),                            |
                  edit_animal_path(animal), class: 'btn btn-default btn-xs'

                = link_to t("helpers.links.destroy"),                         |
                  animal_path(animal), method: :delete,                       |
                    data: { confirm: t("helpers.links.confirm") },            |
                  class: 'btn btn-xs btn-danger'

      = link_to t("helpers.links.new"), new_animal_path,                      |
        class: 'btn btn-primary'
