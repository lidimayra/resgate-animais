- model_class = Usuario

.container
  .row
    .col-md-11

      .page-header
        %h1=t '.title', :default => model_class.model_name.human.titleize

      %p
        %strong= model_class.human_attribute_name(:nome) + ':'
        %br
        = usuario.nome
      %p
        %strong= model_class.human_attribute_name(:email) + ':'
        %br
        = usuario.email
      %p
        %strong= model_class.human_attribute_name(:data_registro) + ':'
        %br
        = usuario.data_registro
      %p
        %strong= model_class.human_attribute_name(:data_desligamento) + ':'
        %br
        = usuario.data_desligamento
      %p
        %strong= model_class.human_attribute_name(:perfil) + ':'
        %br
        = usuario.perfil


      = link_to t('.back', :default => t("helpers.links.back")), usuarios_path, :class => 'btn btn-default'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_usuario_path(usuario), :class => 'btn btn-default'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), usuario_path(usuario), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
